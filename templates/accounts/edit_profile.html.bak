{% extends "base.html" %}

{% block title %}Edit Profile{% endblock %}

{% block content %}
<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center mb-4">Edit Profile</h2>

    <!-- Show current avatar -->
    {% if request.user.accounts_profile.avatar %}
        <div class="mb-3 text-center">
            <img src="{{ request.user.accounts_profile.avatar.url }}" alt="Avatar" style="width:120px; height:120px; object-fit:cover; border-radius:50%;">
        </div>
    {% endif %}

    <!-- Show current cover -->
    {% if request.user.accounts_profile.cover %}
        <div class="mb-3">
            <img src="{{ request.user.accounts_profile.cover.url }}" alt="Cover" style="width:100%; height:200px; object-fit:cover;">
        </div>
    {% endif %}

    <form method="post" enctype="multipart/form-data">
        {% csrf_token %}
        {{ form.as_p }}
        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </form>
</div>
{% endblock %}
